@page
@model PropertyManagement.Pages.Property_Details.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    h1 {
        text-align: center
    }
</style>

    <h1> All Properties</h1>

    <p>
        <a asp-page="Create">Click to add new property</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Property Type
                </th>
                <th>
                    Property Area
                </th>
                <th>
                    Price Of Property
                </th>
                <th>
                    Facilities
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Property_Detail)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Property_Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Facilities)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
