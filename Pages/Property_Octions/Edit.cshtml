@page
@model PropertyManagement.Pages.Property_Octions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Property_Auction</h4>
<hr />
<!--All are labels which shows in property Auction table-->
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Property_Oction.Id" />
            <div class="form-group">
                <label asp-for="Property_Oction.Customer_DetailId" class="control-label">Customer</label>
                <select asp-for="Property_Oction.Customer_DetailId" class="form-control" asp-items="ViewBag.Customer_DetailId"></select>
                <span asp-validation-for="Property_Oction.Customer_DetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property_Oction.Dealer_DetailId" class="control-label">Dealer</label>
                <select asp-for="Property_Oction.Dealer_DetailId" class="form-control" asp-items="ViewBag.Dealer_DetailId"></select>
                <span asp-validation-for="Property_Oction.Dealer_DetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property_Oction.Property_DetailId" class="control-label">Property Area</label>
                <select asp-for="Property_Oction.Property_DetailId" class="form-control" asp-items="ViewBag.Property_DetailId"></select>
                <span asp-validation-for="Property_Oction.Property_DetailId" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Property_Oction.Bid_Price" class="control-label">Bid Price</label>
                <input asp-for="Property_Oction.Bid_Price" class="form-control" />
                <span asp-validation-for="Property_Oction.Bid_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
