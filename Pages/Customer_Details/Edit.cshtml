@page
@model PropertyManagement.Pages.Customer_Details.EditModel

@{
    ViewData["Title"] = "Edit";
}
<!--code for edit customer and save new detail--->
<h1>Edit</h1>

<h4>Customer_Detail</h4>
<hr />
<!--All code for labels in edit customer table--->
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer_Detail.Id" />
            <div class="form-group">
                <label asp-for="Customer_Detail.Customer_Name" class="control-label">Customer Name</label>
                <input asp-for="Customer_Detail.Customer_Name" class="form-control" />
                <span asp-validation-for="Customer_Detail.Customer_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Detail.Email" class="control-label">Email Address</label>
                <input asp-for="Customer_Detail.Email" class="form-control" />
                <span asp-validation-for="Customer_Detail.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Detail.Phone" class="control-label"></label>
                <input asp-for="Customer_Detail.Phone" class="form-control" />
                <span asp-validation-for="Customer_Detail.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_Detail.Address" class="control-label"></label>
                <input asp-for="Customer_Detail.Address" class="form-control" />
                <span asp-validation-for="Customer_Detail.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
