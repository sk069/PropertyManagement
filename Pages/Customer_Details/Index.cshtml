@page
@model PropertyManagement.Pages.Customer_Details.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!--code for alingn heading in centre-->
<style>
    h1 {
        text-align: center
    }
</style>

<!--code for customer page heading-->
<h1>Customers</h1>
<!--code for showing paragraph in customer page-->
<p>Welcome to this page. you can create a new customer entry in this page incuding edit the information of previous customers. Also, you can delete the customer.
   </p>
<!--code for ading new customer when you click on that-->
<p> <a asp-page="Create">Click for add new Customer</a></p>
<table class="table">

    <!--coding for all labels in customer table--->
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Email Address
            </th>
            <th>
                Phone
            </th>
            <th>
               Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer_Detail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
